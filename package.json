    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^3.2.1",
    "@openzeppelin/upgrades-core": "^1.37.1",
    "@stellar/stellar-sdk": "^12.3.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "chalk": "^4.1.2",
    "commander": "12.0.0",
