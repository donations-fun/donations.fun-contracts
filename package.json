  "repository": "https://github.com/raress96/donate.fun-contracts",
  "scripts": {
    "deploy:donate": "hardhat run deploy/deploy-donate.ts",
    "upgrade:donate": "hardhat run deploy/upgrade-donate.ts",
    "deploy:multiversx:donate": "CHAIN=devnet tsx multiversx/interact/multiversx.ts deploy-donate",
    "upgrade:multiversx:donate": "CHAIN=devnet tsx multiversx/interact/multiversx.ts upgrade-donate",
    "interact:donate:to-optimism": "hardhat interact --contract Donate --destination-chain optimism-sepolia --destination-address 0xF12372616f9c986355414BA06b3Ca954c0a7b0dC",
    "interact:donate:to-multiversx": "hardhat interact --contract Donate --destination-chain multiversx --destination-address erd1wavgcxq9tfyrw49k3s3h34085mayu82wqvpd4h6akyh8559pkklsknwhwh",
    "interact:donate:to-avalanche": "hardhat interact --network optimismSepolia --contract Donate --destination-chain avalanche-fuji --destination-address 0xF12372616f9c986355414BA06b3Ca954c0a7b0dC",
    "interact:donate:multiversx:to-avalanche": "CHAIN=devnet tsx multiversx/interact/multiversx.ts send-token avalanche-fuji F12372616f9c986355414BA06b3Ca954c0a7b0dC",
    "compile": "hardhat compile",
    "compile:multiversx": "cd multiversx && mxpy contract build",
    "clean": "hardhat clean",
    "test": "hardhat test --network hardhat",
    "test:multiversx": "vitest run --dir multiversx/tests"
  },
  "devDependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.32.4",
